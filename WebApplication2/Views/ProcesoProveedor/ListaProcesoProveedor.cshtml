@model IEnumerable<Data.ProcesoProveedor>
<div class="table-responsive" style="background-color:white;">
    <br />
    <table class="table table-sm table-hover" id="tblProcesoProveedor">
        @if (Model != null)
        {

            <thead>
                <tr>
                    <th>
                        ID
                    </th>
                    <th>
                        Fecha
                    </th>
                    <th>
                        Precio Total
                    </th>
                    <th>

                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    @*<tr style="cursor:pointer;" onclick="DetalleServicio(@item.Id)">*@
                    <tr style="cursor:pointer;">
                        <td>
                            @item.Id
                        </td>
                        <td>
                            @item.FechaFacturacion
                        </td>
                        <td>
                            @item.PrecioTotal
                        </td>
                        <td>
                            <button type="button" class="btn btn-info" onclick="MostrarProcesoProveedor(@item.Id)">Consultar</button>
                        </td>
                    </tr>
                }
            </tbody>
        }
    </table>
</div>