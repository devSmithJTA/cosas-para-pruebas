@model IEnumerable<Data.Factura>
<div class="table-responsive" style="background-color:white;">
    <br />
    <table class="table table-sm table-hover" id="tblFactura">
        @if (Model != null)
        {

            <thead>
                <tr>
                    <th>
                        ID
                    </th>
                    <th>
                        Cliente
                    </th>
                    <th>
                        Fecha
                    </th>
                    <th>
                        Dias entrega
                    </th>
                    <th>
                        Precio Total
                    </th>
                    <th>

                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    @*<tr style="cursor:pointer;" onclick="DetalleServicio(@item.Id)">*@
                    <tr style="cursor:pointer;">
                        <td>
                            @item.Id
                        </td>
                        <td style=" word-break: break-all;">
                            @item.cliente.NombreCompleto
                        </td>
                        <td>
                            @item.FechaCreacion
                        </td>
                        <td>
                            @item.DiasEntrega
                        </td>
                        <td>
                            @item.PrecioTotal
                        </td>
                        <td>
                            <button type="button" class="btn btn-info" onclick="MostrarFactura(@item.Id)">Consultar</button>
                        </td>
                    </tr>
                }
            </tbody>
        }
    </table>
</div>